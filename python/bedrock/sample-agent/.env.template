# =============================================================================
# Amazon Bedrock Sample Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# AWS Configuration (Required)
# -----------------------------------------------------------------------------
# Your AWS credentials for accessing Bedrock
# See README.md for instructions on obtaining these credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Bedrock Model Configuration
BEDROCK_MODEL_ID=

# -----------------------------------------------------------------------------
# Agent 365 Observability Configuration
# -----------------------------------------------------------------------------
# Enable to use Agent 365 observability exporter (default: false uses console exporter)
ENABLE_A365_OBSERVABILITY_EXPORTER=false

# Use custom token resolver and token cache (true) or built-in AgenticTokenCache (false)
Use_Custom_Resolver=true

# Optional: Set observability log level ('info', 'warn', 'error', or 'none')
A365_OBSERVABILITY_LOG_LEVEL=

# Observability service identification
OBSERVABILITY_SERVICE_NAME=python-bedrock-sample-agent
OBSERVABILITY_SERVICE_NAMESPACE=agent365-samples

# -----------------------------------------------------------------------------
# Service Connection Settings
# -----------------------------------------------------------------------------
# Microsoft Entra ID app registration for the agent
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__CLIENTID=
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__CLIENTSECRET=
CONNECTIONS__SERVICE_CONNECTION__SETTINGS__TENANTID=

# Set service connection as default
CONNECTIONSMAP__0__SERVICEURL=*
CONNECTIONSMAP__0__CONNECTION=SERVICE_CONNECTION

# -----------------------------------------------------------------------------
# Agentic Authentication Options
# -----------------------------------------------------------------------------
# Authentication type
AGENTAPPLICATION__USERAUTHORIZATION__HANDLERS__AGENTIC__SETTINGS__TYPE=AgenticUserAuthorization
AGENTAPPLICATION__USERAUTHORIZATION__HANDLERS__AGENTIC__SETTINGS__ALT_BLUEPRINT_NAME=SERVICE_CONNECTION
AGENTAPPLICATION__USERAUTHORIZATION__HANDLERS__AGENTIC__SETTINGS__SCOPES=ea9ffc3e-8a23-4a7d-836d-234d7c7565c1/.default

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the agent server
PORT=3978

# Environment mode (development or production)
PYTHON_ENV=development

# -----------------------------------------------------------------------------
# MCP Tooling Configuration (Optional)
# -----------------------------------------------------------------------------
# Bearer token for MCP tool servers
BEARER_TOKEN=

# Use Agentic Authentication rather than OBO for tools
USE_AGENTIC_AUTH=false
